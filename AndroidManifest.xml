<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
	package="com.android.apptime" android:versionCode="1"
	android:versionName="1.0">
	<uses-sdk android:minSdkVersion="4" />
	<uses-permission android:name="android.permission.INTERNET"></uses-permission>

	<application android:icon="@drawable/icon" android:label="@string/app_name"
		android:debuggable="true">

		<activity android:name=".Login" android:label="@string/app_name"
			android:theme="@android:style/Theme.NoTitleBar">
			<intent-filter>
				<action android:name="android.intent.action.MAIN" />
				<category android:name="android.intent.category.LAUNCHER" />
			</intent-filter>
		</activity>
		<activity android:name=".Main" android:label="@string/app_name"
			android:theme="@android:style/Theme.NoTitleBar">
		</activity>
		<activity android:name=".view.PopupForm" android:label="@string/app_name"
			android:theme="@android:style/Theme.Translucent">
		</activity>
		<activity android:name=".view.CalendarView" android:label="@string/app_name"
			android:theme="@android:style/Theme.NoTitleBar">
		</activity>
		<activity android:name=".view.MapView" android:label="@string/app_name"
			android:theme="@android:style/Theme.NoTitleBar">
		</activity>
		<activity android:name=".view.OrganizerView" android:label="@string/app_name"
			android:theme="@android:style/Theme.NoTitleBar">
		</activity>
		<activity android:name=".view.CalendarDayView" android:label="@string/app_name"
			android:theme="@android:style/Theme.NoTitleBar">
		</activity>
		<activity android:name=".view.CalendarWeekView"
			android:label="@string/app_name" android:theme="@android:style/Theme.NoTitleBar">
		</activity>
		<activity android:name=".view.CalendarMonthView"
			android:label="@string/app_name" android:theme="@android:style/Theme.NoTitleBar">
		</activity>
		<activity android:name=".view.CalendarAgendaView"
			android:label="@string/app_name" android:theme="@android:style/Theme.NoTitleBar">
		</activity>

	</application>
</manifest>